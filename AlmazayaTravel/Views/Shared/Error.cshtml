@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center section-padding" style="margin-top: 100px;">
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    @if (Model?.ShowRequestId ?? false)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p class="mt-4">
        We apologize for the inconvenience. Please try again later or contact support if the problem persists.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go back to Home</a>
</div>
