@{
    ViewData["Title"] = "Error";
}

<div class="container text-center section-padding">
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    @* Optionally display more details for developers (check environment) *@
    @*
    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
    *@

    <p class="mt-4">
        We apologize for the inconvenience. Please try again later or contact support if the problem persists.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go back to Home</a>
</div>

@* Remove Model directive if not using ErrorViewModel *@
@* @model ErrorViewModel *@
