    <!-- Inline script for smooth scroll and active nav link (can be moved to index.js) -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"], a[asp-fragment]').forEach(anchor => {
                anchor.addEventListener("click", function (e) {
                    let targetId = this.getAttribute("href");
                    if (this.hasAttribute('asp-fragment')) {
                        targetId = '#' + this.getAttribute('asp-fragment');
                    }

                    if (targetId && targetId.startsWith('#')) {
                        const targetElement = document.querySelector(targetId);
                        if (targetElement) {
                            e.preventDefault(); // Prevent default only if target exists on the page
                            const navbarHeight = document.querySelector(".navbar")?.offsetHeight || 0;
                            const targetPosition = targetElement.offsetTop - navbarHeight;
                            window.scrollTo({ top: targetPosition, behavior: "smooth" });

                            // Optional: Close navbar on mobile after click
                             const navbarCollapse = document.querySelector(".navbar-collapse");
                             if (navbarCollapse && navbarCollapse.classList.contains("show")) {
                                 new bootstrap.Collapse(navbarCollapse).hide();
                             }
                        }
                        // If targetElement doesn't exist, allow default behavior (might be navigating to another page)
                    }
                });
            });

            // Active Nav Link Highlighting (Simplified)
            function updateActiveNavLink() {
                 // Remove active class from all first
                document.querySelectorAll(".nav-link").forEach(link => link.classList.remove("active"));

                const currentPath = window.location.pathname;
                const currentHash = window.location.hash;

                document.querySelectorAll(".nav-link").forEach(link => {
                    const linkPath = link.getAttribute("href");
                    const linkFragment = link.getAttribute("asp-fragment") ? '#' + link.getAttribute("asp-fragment") : null;

                    // Match full path first (for separate pages like Policy)
                    if (linkPath === currentPath && currentPath !== '/' && currentPath !== '/Home' && currentPath !== '/Home/Index') {
                        link.classList.add("active");
                        return; // Stop checking if full path matches
                    }

                    // Match fragment on the home page
                    if ((currentPath === '/' || currentPath === '/Home' || currentPath === '/Home/Index') && linkFragment && currentHash === linkFragment) {
                         link.classList.add("active");
                    }
                    // Add default active for Home if no hash or no other match
                    else if ((currentPath === '/' || currentPath === '/Home' || currentPath === '/Home/Index') && (linkFragment === 'home' || linkFragment === null) && !currentHash) {
                         // Heuristic: If it links to home/index without a fragment, make it active when on root
                         if (link.getAttribute("asp-action") === "Index" && (linkFragment === 'home' || linkFragment === null)) {
                              link.classList.add("active");
                         }
                    }

                });


                 // More robust way requires calculating current section based on scroll position
                 // (Similar to your original JS, but might need adjustments for ASP.NET paths/fragments)
            }


            window.addEventListener("scroll", updateActiveNavLink);
            updateActiveNavLink(); // Initial call
        });
    </script>


